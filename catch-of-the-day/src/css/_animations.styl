/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  background red
  transform: translateX(-120%)
  transition 0.5s
  max-height: 0
  padding: 0
  &.order-enter-active
    background yellow
    max-height 60
    transform: translateX(0)
    padding 2rem 0 !important

.order-exit
  background thistle
  transition 0.5s
  transform: translateX(0)
  &.order-exit-active
    background palegoldenrod
    transform: translateX(120%)
    padding 0    